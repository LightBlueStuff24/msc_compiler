{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "project": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the project"
          },
          "description": {
            "type": "string",
            "description": "Description of the project"
          }
        }
      },
      "scriptModules": {
        "description": "List of script modules being used",
        "type": "array",
        "items": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "@minecraft/server",
                "@minecraft/server-ui",
                "@minecraft/server-gametest",
                "@minecraft/server-net",
                "@minecraft/server-admin",
                "@minecraft/server-editor"
              ]
            },
            {
              "type": "object",
              "properties": {
                "version": {
                  "type": "string",
                  "description": "Version of this module. If omitted, msc will use the latest version"
                },
                "name": {
                  "type": "string",
                  "enum": [
                    "@minecraft/server",
                    "@minecraft/server-ui",
                    "@minecraft/server-gametest",
                    "@minecraft/server-net",
                    "@minecraft/server-admin",
                    "@minecraft/server-editor"
                  ],
                  "description": "Name of the modules"
                }
              },
              "required": ["version", "name"],
              "additionalProperties": false
            }
          ]
        },
        "maxItems": 6
      },
      "globalNamespace": {
        "description": "Default namespace for Msc to use when creating a build",
        "type": "string"
      },
      "formatVersions": {
        "type": "array",
        "description": "Specifies which format versions Msc should use when creating a build",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "enum": ["block", "item", "entity", "recipe"],
              "description": "Name of format version"
            },
            "version": {
              "type": "string",
              "description": "Version to use for this format version"
            }
          },
          "required": ["name", "version"],
          "additionalProperties": false
        }
      },
      "scriptEntry": {
        "type": "string",
        "description": "Entry file for script"
      },

      "minEngineVersion":{
        "type":"array",
        "items": {
            "type":"number"
        },
        "maxItems": 3,
        "Description": "If provided, this information will be used during the generation of the manifest. Otherwise, msc will default to using the current Minecraft version."
      },
      "ignoreFiles": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Specifies a list of files and folders for msc to ignore when searching for configuration. Primarily used to optimize internal build processes and reduce build times."
      },      
      "experimentalFeatures":{
        "type":"object",
        "properties": {
          "languageGeneration":{
            "type":"boolean",
            "description": "Specifies whether msc should automatically generate lang files in the 29 languages MCBE supports. If false, msc will only generate english lang file"
          }
        },
        "description": "Describes experimental features for msc to use in the generation of your project"
      }
    },
    "required": ["project", "globalNamespace", "formatVersions"],
    "if": {
      "properties": { "scriptModules": { "not": { "type": "null" } } }
    },
    "then": { "required": ["scriptEntry"] },
    "else": { "not": { "required": ["scriptEntry"] } },
    "additionalProperties": false
  }
  