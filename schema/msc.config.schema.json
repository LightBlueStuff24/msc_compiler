{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "msc": {
      "type": "object",
      "properties": {
        "experimentalFeatures": {
          "type": "array",
          "items": {
            "enum": [
              "Enchantable"
            ],
            "type":"string"
          },
          "default":"",
          "description": "List of experimentalFeatures that should be used during compilation"
        },
        "compilerOptions": {
          "type": "object",
          "properties": {
            "srcDir": {
              "type": "string",
              "description": "Input directory"
            },
            "outDir": {
              "type": "string",
              "description": "Output directory"
            },
            "fileIndent": {
              "type": "number",
              "description": "Sets the indentation of the compiled json file",
              "default": 0
            }
          }
        }
      }
    }
  }
}
