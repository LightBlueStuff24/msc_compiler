{
	"compilerOptions": {
	  "baseUrl": "./src",
	  // Enable latest features
	  "lib": [
		"ESNext"
	  ],
	  "target": "ESNext",
	  "module": "ESNext",
	  "moduleDetection": "force",
	  "jsx": "react-jsx",
	  "allowJs": true,
	  "outDir": "./dist",
	  // Generate .d.ts files
	  "declaration": true,
	  "declarationDir": "./dist/types",
	  // Bundler mode
	  "moduleResolution": "bundler",
	  "allowImportingTsExtensions": true,
	  "verbatimModuleSyntax": true,
	  "noEmit": true,
	  // Best practices
	  "strict": true,
	  "skipLibCheck": true,
	  "noFallthroughCasesInSwitch": true,
	  // Some stricter flags
	  "noUnusedLocals": true,
	  "noUnusedParameters": true,
	  "noPropertyAccessFromIndexSignature": true
	},
	"include": [
	  "src/**/*.ts"
	]
  }